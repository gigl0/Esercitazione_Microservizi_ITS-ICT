@{
}
@model IEnumerable<BikeStores.Data.Models.Product>

<h2>Products</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Brand.BrandName</td>
                <td>@item.Category.CategoryName</td>
                <td>@item.ListPrice.ToString("C")</td>
                <td><a asp-action="Details" asp-route-id="@item.ProductId">Details</a></td>
            </tr>
        }
    </tbody>
</table>
